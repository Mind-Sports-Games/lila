{
  "name": "lila",
  "version": "2.0.0",
  "private": true,
  "description": "playstrategy.org: the forever free, adless and open source abstract games server",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mind-Sports-Games/lila"
  },
  "keywords": [
    "chess",
    "draughts",
    "linesofaction",
    "othello",
    "backgammon",
    "playstrategy"
  ],
  "author": "Thibault Duplessis and the gang",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/Mind-Sports-Games/lila/issues"
  },
  "homepage": "https://playstrategy.org",
  "engines": {
    "node": "^20.19.4",
    "pnpm": "^10.17.0"
  },
  "lint-staged": {
    "*.{js,ts,md,json,scss}": "prettier --write"
  },
  "packageManager": "pnpm@10.17.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "chessground",
      "stratops"
    ]
  },
  "devDependencies": {
    "@types/node": "^20.19.4",
    "@types/playstrategy": "workspace:*",
    "@types/web": "^0.0.269",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "lint-staged": "^15.5.1",
    "onchange": "^7.1.0",
    "prettier": "^3.5.3",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "ab": "github:lichess-org/ab-stub",
    "chessground": "github:Mind-Sports-Games/chessground#v7.11.1-pstrat3.28",
    "stratops": "github:Mind-Sports-Games/stratops#v0.8.1-pstrat5.24",
    "xml2js": "^0.6.2"
  },
  "scripts": {
    "format": "prettier --write --log-level warn .",
    "check-format": "prettier --check --log-level warn .",
    "watch-format": "onchange \"**/*\" -- prettier --write --log-level warn {{changed}}",
    "lint": "eslint . --ext .ts"
  }
}
